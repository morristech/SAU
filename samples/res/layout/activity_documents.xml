<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button_open_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:onClick="openTxt"
        android:text="@string/open_txt" />

    <Button
        android:id="@+id/button_open_ods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button_open_txt"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:onClick="openOds"
        android:text="@string/open_ods" />

    <Button
        android:id="@+id/button_open_ogg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button_open_ods"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:onClick="openOgg"
        android:text="@string/open_ogg" />

    <Button
        android:id="@+id/button_open_void"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button_open_ogg"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:onClick="openVoid"
        android:text="@string/open_void" />

    <Button
        android:id="@+id/button_open_null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button_open_void"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:onClick="openNull"
        android:text="@string/open_null" />

</RelativeLayout>